pipeline {
    agent any

    tools {
       
        maven "M2_HOME"
    }

    stages {
        stage('Checkout code'){
             steps {
               
              git branch: 'main', url: 'https://github.com/Rishabh-Patel-git/CalculatorMvn.git'
  
            }

        }
        stage('Build') {
            steps {

                sh "mvn -Dmaven.test.failure.ignore=true clean package"
 
            }

           
        }
        stage('Test'){
             steps {

                sh "mvn -Dmaven.test.failure.ignore=true clean package"
 
            }
             post {
               
                success {
                    junit '**/target/surefire-reports/TEST-*.xml'
                   
                }
            }
        }
    }
}

